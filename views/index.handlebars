<h1>Eat It!</h1>

<!--space for burgers-->
<!--not eaten-->
<div class="uneaten">
<h2>That looks tasty!</h2>

<ul>
    {{#each burgers as |burger| }} {{#unless burger.devoured}} {{> burgers/burger-block burger=burger}} {{/unless}} {{/each}}
</ul>
</div>

<br>
<!--eaten-->
<div class="eaten">
<h2>That was goooood!</h2>
<ul>
    {{#each burgers as |burger| }} {{#if burger.devoured}} {{>burgers/burger-block burger=burger}} {{/if}} {{/each}}
</ul>
</div>

<br>
<!--form for creating burgers-->
<form class="create-form">
    <h2>Add a burger!</h2>
    <div class="form-group">
        <label for="burger">Order a Burger:</label>
        <input type="text" id="burger" name="name">
    </div>

    <button type="submit">Add It!!</button>
</form>